// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id          String   @id
  ghibli_id   String   @unique
  title       String
  description String
  producer    String
  director    String
  banner      String
  created_at  DateTime @default(now())
}
